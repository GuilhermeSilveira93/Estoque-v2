{
  "root": true,
  "extends": "@kalilasc/eslint-config/nextjs",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": true
  },
  "rules": {
    "@typescript-eslint/no-non-null-asserted-optional-chain": "warn",
    "semi": "warn",
    "comma-dangle": "off",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "parser": "flow",
        "endOfLine": "auto"
      }
    ]
  }
}