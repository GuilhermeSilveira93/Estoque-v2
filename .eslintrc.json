{
  "root": true,
  "extends": [
    "@kalilasc/eslint-config/nextjs",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": true
  },
  "rules": {
    "no-unused-vars": [2, {"vars": "all", "args": "after-used"}],
    "react/prop-types": "off",
    "@typescript-eslint/no-non-null-asserted-optional-chain": "warn",
    "semi": "warn",
    "comma-dangle": "off",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "parser": "flow",
        "endOfLine": "auto"
      }
    ]
  }
}